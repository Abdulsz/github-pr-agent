{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "github-pr-agent",
  "main": "src/server.ts",
  "compatibility_date": "2025-01-01",
  "compatibility_flags": ["nodejs_compat"],

  // Workers AI binding for code generation
  "ai": {
    "binding": "AI"
  },

  // Durable Objects for the agent
  "durable_objects": {
    "bindings": [
      {
        "name": "GitHubPRAgent",
        "class_name": "GitHubPRAgent"
      }
    ]
  },

  // Migrations for SQLite storage
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["GitHubPRAgent"]
    }
  ],

  // Assets for the frontend (SPA routing: serve index.html for unknown paths)
  "assets": {
    "directory": "dist",
    "binding": "ASSETS",
    "not_found_handling": "single-page-application"
  },

  // D1 database for feedback service
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "feedback-db",
      "database_id": "2e0a47fe-0eeb-4e6c-8e23-558cbf91899f"
    }
  ],

  // Development settings
  "dev": {
    "port": 8787
  }
}
